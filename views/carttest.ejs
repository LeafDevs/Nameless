<!DOCTYPE html>
<html>
    <head>
        <style>
.cart {
    width: 40%;
    height: 97%;
    position: fixed;
    top: 50%;
    right: 20px;
    transform: translateY(-50%) translateX(10%);
    background-color: #fff;
    padding: 20px;
    border-radius: 20px;
    transition: all 1s ease;
    box-shadow: -10px 0 25px 5px rgba(0,0,0,0.5);
}

.cart.hidden {
     transform: translateY(-50%) translateX(110%);
}

/* add some organization to the cart */
.cart-item {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-bottom: 20px;
    border-bottom: 1px solid #ccc;
    padding-bottom: 20px;
}

.cart-item img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    margin-right: 20px;
}

.cart-item .info {
    flex: 1;
}

.cart-item .info h2 {
    font-size: 20px;
    margin-right: 30px;
    font-weight: normal;
    text-align: center;
}

.cart-item .info h1 {
    font-size: 24px;
    font-weight: normal;
    text-align: center;
}

.cart-item .info .remove {
    color: #aaa;
    cursor: pointer;
}

.cart-item .info .remove:hover {
    color: #000;
}

        </style>
    
    </head>
    <body>
        <button onclick="HolySea()">Open Cart</button>
        <div class="cart" id="cart">
            <button onclick="HolySea()" style="font-size:24px">Close Cart</button>
        </div>
    </body>
    <script>

        function HolySea() {
            let Mary = document.getElementById('cart');
            if(Mary.classList.contains('hidden')) {
                return Mary.classList.remove('hidden')
            } else {
                return Mary.classList.add('hidden')
            }
        }

        function loadCart() {
            let cart = <%- JSON.stringify(cart) %>;
            console.log(<%- JSON.stringify(cart) %>);
            let cartElement = document.getElementById('cart');
            for(let i = 0; i <= cart.length; i++) {
                let item = cart[i];
                let itemElement = document.createElement('div');
                itemElement.classList.add('cart-item');
                itemElement.innerHTML = `
                    <img src="${item.imageLink}">
                    <div class="info">
                        <h2>${item.name}</h2>
                        <h1>$${item.price}</h1>
                        <div class="remove">Remove</div>
                    </div>
                `;
                cartElement.appendChild(itemElement);
            }
        }

        loadCart();

    </script>
</html>